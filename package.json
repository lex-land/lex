{
  "private": true,
  "version": "1.0.0",
  "name": "lex",
  "description": "A Collaboration Tool for API documentation",
  "main": "pages/index",
  "repository": "git@github.com:lex-land/lex.git",
  "author": "briefguo <gyj9094@gmail.com>",
  "keywords": [
    "react",
    "nestjs",
    "nextjs",
    "typeorm",
    "typescript"
  ],
  "license": "MIT",
  "scripts": {
    "prestart:server": "docker-compose -f ./docker/server.yml down --remove-orphans",
    "start:server": "docker-compose -f ./docker/server.yml up -d",
    "start:dev": "npx next dev",
    "start": "npx next start",
    "prebuild": "rimraf build",
    "build": "SUNMI_PROD_URL=https://lex-land.online npx next build",
    "predeploy": "docker-compose -f ./docker/docker-compose.yml down --remove-orphans",
    "deploy": "docker-compose -f ./docker/docker-compose.yml up"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.17.1",
    "@blueprintjs/select": "^3.8.1",
    "class-validator": "^0.9.1",
    "classnames": "^2.2.6",
    "crypto-js": "^3.1.9-1",
    "formik": "^1.5.8",
    "highlight.js": "^9.15.8",
    "isomorphic-fetch": "^2.2.1",
    "keyboardjs": "^2.5.1",
    "lodash": "^4.17.11",
    "md5": "^2.2.1",
    "moment": "^2.24.0",
    "next": "^9.0.1",
    "nprogress": "^0.2.0",
    "numeral": "^2.0.6",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "path-to-regexp": "^3.0.0",
    "pluralize": "^7.0.0",
    "qs": "^6.7.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scrollspy": "^3.4.0",
    "react-sticky": "^6.0.3",
    "react-use": "^9.11.0",
    "rxjs": "^6.3.3",
    "styled-components": "^4.3.2",
    "typeorm": "0.2.17",
    "universal-cookie": "^4.0.0",
    "xlsx": "^0.14.3",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@types/classnames": "^2.2.7",
    "@types/crypto-js": "^3.1.43",
    "@types/highlight.js": "^9.12.3",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/lodash": "^4.14.126",
    "@types/md5": "^2.1.33",
    "@types/node": "^12.6.3",
    "@types/nprogress": "0.0.29",
    "@types/numeral": "0.0.25",
    "@types/pluralize": "0.0.29",
    "@types/qs": "^6.5.3",
    "@types/react": "^16.8.23",
    "@types/react-scrollspy": "^3.3.0",
    "@types/react-sticky": "^6.0.3",
    "@types/react-wait": "^0.3.0",
    "@types/styled-components": "^4.1.14",
    "@types/supertest": "^2.0.7",
    "@types/yup": "^0.26.13",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "babel-plugin-import": "^1.12.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-styled-components": "^1.10.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.12.1",
    "eslint-config-google": "^0.12.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0",
    "prettier-eslint": "^8.8.2",
    "prettier-stylelint": "^0.4.2",
    "rebound": "^0.1.0",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.3",
    "stylelint": "^9.10.1",
    "stylelint-config-idiomatic-order": "^6.2.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "typescript": "^3.5.3",
    "webpack": "4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "useJSXTextNode": true,
      "project": "tsconfig.json"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "google",
      "prettier/@typescript-eslint",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "sort-imports": [
        "error",
        {
          "ignoreCase": false,
          "ignoreDeclarationSort": false,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "multiple",
            "single"
          ]
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-parameter-properties": "off",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/camelcase": [
        "error",
        {
          "properties": "never",
          "ignoreDestructuring": true
        }
      ],
      "no-invalid-this": "off",
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "spaced-comment": "off",
      "camelcase": "off",
      "react/no-unescaped-entities": "off",
      "react/prop-types": "off",
      "react/display-name": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "require-jsdoc": "off",
      "valid-jsdoc": "warn",
      "new-cap": "off"
    },
    "settings": {
      "react": {
        "createClass": "createReactClass",
        "pragma": "React",
        "version": "detect"
      }
    }
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "import",
        {
          "libraryName": "lodash",
          "libraryDirectory": "",
          "camel2DashComponentName": false
        },
        "lodash"
      ],
      [
        "import",
        {
          "libraryName": "react-use",
          "libraryDirectory": "lib",
          "camel2DashComponentName": false
        },
        "react-use"
      ],
      [
        "module-resolver",
        {
          "root": [
            "./"
          ],
          "alias": {
            "@": "./"
          },
          "extensions": [
            ".ts",
            ".tsx"
          ]
        }
      ]
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-styled-components"
    ],
    "rules": {
      "indentation": 2,
      "string-quotes": "single",
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "extends"
          ]
        }
      ],
      "block-no-empty": null,
      "font-family-no-missing-generic-family-keyword": null,
      "no-descending-specificity": null
    }
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "stylelint",
        "eslint"
      ]
    },
    "ignore": [
      "node_modules",
      "**.d.ts"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "rootDir": ".",
    "testRegex": "tests/*.spec.ts$",
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@core/(.*)$": "<rootDir>/core/$1",
      "^@components/(.*)$": "<rootDir>/components/$1",
      "^@config/(.*)$": "<rootDir>/config/$1",
      "^@helpers/(.*)$": "<rootDir>/helpers/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
